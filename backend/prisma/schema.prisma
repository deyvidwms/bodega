generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Bodega {
  id Int @id @default(autoincrement())

  nome      String
  descricao String
  cnpj      String @unique
  imagem    String

  usuarios      Usuario[]
  produtos      Produto[]
  clienteBodega ClienteBodega[]
}

model CategoriaProduto {
  id Int @id @default(autoincrement())

  nome   String
  imagem String

  produtos Produto[]
}

model Usuario {
  id Int @id @default(autoincrement())

  email String @unique
  senha String

  idBodega Int?
  idPessoa Int  @unique

  bodega Bodega? @relation(fields: [idBodega], references: [id])
  pessoa Pessoa  @relation(fields: [idPessoa], references: [id])

  produtos Produto[]
  lotes    Lote[]
}

model Produto {
  id Int @id @default(autoincrement())

  titulo    String
  descricao String
  imagem    String

  idBodega           Int?
  idCategoriaProduto Int?
  idCriador          Int?

  bodega           Bodega?           @relation(fields: [idBodega], references: [id])
  categoriaProduto CategoriaProduto? @relation(fields: [idCategoriaProduto], references: [id])
  criador          Usuario?          @relation(fields: [idCriador], references: [id])

  lotes Lote[]
}

model Lote {
  id Int @id @default(autoincrement())

  quantidadeInicial  Int
  quantidadeAtual    Int
  validade           DateTime?
  compradoEm         DateTime
  custo              Decimal
  precoVenda         Decimal
  precoVendaPromocao Decimal   @default(0)
  emPromocao         Boolean   @default(false)

  criador Usuario @relation(fields: [idCriador], references: [id])
  produto Produto @relation(fields: [idProduto], references: [id])

  idCriador Int
  idProduto Int

  vendas VendaLote[]
}

model Pessoa {
  id Int @id @default(autoincrement())

  cpf          String  @unique
  nome         String
  celular      String? @unique
  saldoDevedor Decimal @default(0)

  Usuario       Usuario?
  ClienteBodega ClienteBodega[]
  Venda         Venda[]
}

model VendaLote {
  id Int @id @default(autoincrement())

  quantidade Int

  idLote  Int
  idVenda Int?

  lote  Lote   @relation(fields: [idLote], references: [id])
  venda Venda? @relation(fields: [idVenda], references: [id])
}

model Venda {
  id Int @id @default(autoincrement())

  idComprador Int?
  vendidoEm   DateTime

  comprador  Pessoa?     @relation(fields: [idComprador], references: [id])
  vendaLotes VendaLote[]
}

model ClienteBodega {
  id Int @id @default(autoincrement())

  idBodega  Int
  idCliente Int

  cliente Pessoa @relation(fields: [idCliente], references: [id])
  bodega  Bodega @relation(fields: [idBodega], references: [id])
}
