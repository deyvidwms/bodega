generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Bodega {
  id Int @id @default(autoincrement())

  nome      String
  descricao String
  cnpj      String @unique
  endereco  String
  imagem    String

  usuarios Usuario[]
  produtos Produto[]
}

model Produto {
  id        Int    @id @default(autoincrement())
  titulo    String
  descricao String
  imagem    String

  idCriador Int?
  criadoPor Usuario? @relation(fields: [idCriador], references: [id])

  idBodega Int?
  bodega   Bodega? @relation(fields: [idBodega], references: [id])

  Lote Lote[]
}

model Usuario {
  id Int @id @default(autoincrement())

  nome    String
  email   String  @unique
  cpf     String  @unique
  celular String? @unique
  senha   String

  idBodega Int?
  bodega   Bodega? @relation(fields: [idBodega], references: [id])

  produtos Produto[]
  Lote     Lote[]
}

model Lote {
  id Int @id @default(autoincrement())

  quantidadeInicial Int
  quantidadeAtual   Int
  expiraEm          DateTime?
  compradoEm        DateTime
  custo             Decimal

  idProduto Int
  produto   Produto @relation(fields: [idProduto], references: [id])

  idCriador Int
  criadoPor Usuario @relation(fields: [idCriador], references: [id])
}
